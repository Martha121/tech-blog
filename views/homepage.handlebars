<ol class="post-list">
    {{#each posts}}
    <li>
        <article class="post">
            <div class="title">
                <p>{{title}}</p>
                <p>({{content}})</p>
            </div>
            <div class="meta">
                <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
            </div>
        </article>
    </li>
    {{/each}}
</ol>

